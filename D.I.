  <script>
    // ======== Simulador ========
    function simular() {
      const tipo = document.getElementById("tipo").value;
      const espumacao = document.getElementById("espumacao").value;
      let texto = "";

      if (espumacao <= 2) texto = "Mais densa e resistente, mas menos isolante.";
      else if (espumacao == 3) texto = "M√©dio equil√≠brio entre leveza e resist√™ncia.";
      else texto = "Muito leve e isolante, por√©m mais fr√°gil.";

      document.getElementById("resultadoSimulador").innerText = 
        `Material: ${tipo.charAt(0).toUpperCase() + tipo.slice(1)} ‚Äî ${texto}`;
    }

    // ======== Quiz ========
    function responder(correta) {
      const resposta = document.getElementById("respostaQuiz");
      if (correta) {
        resposta.innerHTML = "‚úÖ Correto! A cer√¢mica espumada √© leve e isolante.";
        resposta.style.color = "green";
      } else {
        resposta.innerHTML = "‚ùå N√£o exatamente. Ela √© mais usada como isolante t√©rmico e ac√∫stico.";
        resposta.style.color = "red";
      }
    }
